<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Meta Insight</title>
    <script
      type="module"
      src="https://cdn.jsdelivr.net/npm/@ionic/core/dist/ionic/ionic.esm.js"
    ></script>
    <script
      nomodule
      src="https://cdn.jsdelivr.net/npm/@ionic/core/dist/ionic/ionic.js"
    ></script>
    <script src="/js/logout.js"></script>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@ionic/core/css/ionic.bundle.css"
    />
    <link rel="stylesheet" href="/styles/styles.css" />
  </head>

  <body>
    <ion-split-pane when="sm" content-id="main-content">
      {{#notEqual url '/login'}}
        <ion-menu content-id="main-content" type="overlay">
          <ion-content class="ion-padding">
            <h1>Meta-Insight</h1>
            <ion-button 
              href="/" 
              color="dark"
              {{#if (isActive '/' url)}}
              fill="clear"
              {{/if}}
              expand="block">Home</ion-button>
            <ion-button
              href="/games"
              color="dark"
              {{#if (isActive '/games' url)}}
              fill="clear"
              {{/if}}
              expand="block"
            >Games</ion-button>
            <ion-button
              href="/platforms"
              color="dark"
              {{#if (isActive '/platforms' url)}}
              fill="clear"
              {{/if}}
              expand="block"
            >Platforms</ion-button>
            <ion-button
              href="/genres"
              color="dark"
              {{#if (isActive '/genres' url)}}
              fill="clear"
              {{/if}}
              expand="block"
            >Generes</ion-button>
            <ion-button
              href="/publishers"
              color="dark"
              {{#if (isActive '/publishers' url)}}
              fill="clear"
              {{/if}}
              expand="block"
            >Publishers</ion-button>
            <ion-button 
            href="/tags" 
            color="dark" 
            {{#if (isActive '/tags' url)}}
            fill="clear"
            {{/if}}
            expand="block">Tags</ion-button>
          </ion-content>
        </ion-menu>
      {{/notEqual}}
      <div class="ion-page" id="main-content">
        {{#notEqual url '/login'}}
          <ion-header>
            <ion-toolbar>
              <ion-buttons slot="start">
                <ion-menu-button></ion-menu-button>
              </ion-buttons>
              <ion-searchbar placeholder="Custom Placeholder"></ion-searchbar>
              <ion-buttons slot="end">
                <ion-button color="dark" fill="clear" expand="block">
                  <ion-icon slot="icon-only" name="person" />
                </ion-button>
              </ion-buttons>
            </ion-toolbar>
          </ion-header>
        {{/notEqual}}
        <ion-content class="ion-padding">
          {{{body}}}
        </ion-content>
        {{#if logged_in}}
          <ion-footer>
            <ion-toolbar>
              <ion-button onclick="logoutUser(event)">Logout</button>
            </ion-toolbar>
          </ion-footer>
        {{else}}
          <ion-footer>
            <ion-toolbar>
              <ion-button href="/login">Login</button>
            </ion-toolbar>
          </ion-footer>
        {{/if}}
      </div>
    </ion-split-pane>
  </body>

</html>