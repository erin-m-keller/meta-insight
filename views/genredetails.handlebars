<div class="row align-center mb-5">
  <p><strong>Details</strong></p>
  <ion-button href="/genres" shape="round">Back</ion-button>
  <ion-card>
    <ion-card-header>
      <ion-card-title>Games Count: {{genre.games_count}}</ion-card-title>
      <ion-card-subtitle>{{genre.name}}</ion-card-subtitle>
    </ion-card-header>
    <ion-card-content>
      {{{genre.description}}}
    </ion-card-content>
  </ion-card>
  <ion-grid>
    <ion-row>
      {{#each games as |game|}}
        <ion-col size-xs="12" size-sm="12" size-md="6" size-lg="4">
          <a href="/games/{{game.id}}">
            <ion-card>
              <ion-card-header>
                <ion-card-title>Released: {{game.released}}</ion-card-title>
                <ion-card-subtitle>{{game.name}}</ion-card-subtitle>
              </ion-card-header>
              <ion-card-content>
                <img src={{game.background_image}} alt={{game.slug}} />
                {{game.esrb_rating.name}}
                {{game.rating}}
              </ion-card-content>
            </ion-card>
          </a>
        </ion-col>
      {{/each}}
    </ion-row>
  </ion-grid>
</div>