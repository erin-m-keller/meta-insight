<div class="row align-center mb-5">
  <h1>Genres</h1>
  <ion-searchbar
    debounce="500"
    placeholder="Search"
    id="search_genres"
  ></ion-searchbar>
  <ion-grid>
    <ion-row>
      {{#each genres as |genre|}}
        <ion-col size-xs="12" size-sm="12" size-md="6" size-lg="4">
          <a href="/genres/{{genre.id}}">
            <ion-card>
              <ion-card-header>
                <ion-card-title>Game Count:
                  {{genre.games_count}}</ion-card-title>
                <ion-card-subtitle>{{genre.name}}</ion-card-subtitle>
              </ion-card-header>
              <ion-card-content>
                <img src={{genre.image_background}} alt={{genre.slug}} />
                {{genre.description}}
              </ion-card-content>
            </ion-card>
          </a>
        </ion-col>
      {{/each}}
    </ion-row>
  </ion-grid>
</div>